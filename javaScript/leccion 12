// Ejercicio 1: FunciÃ³n que valide una contraseÃ±a 
// (mÃ­nimo 8 caracteres, 1 nÃºmero, 1 mayÃºscula)

function validatePassword(password) {
  // Verificamos que tenga al menos 8 caracteres
  if (password.length < 8) {
    return false;
  }

  // Verificamos si tiene al menos una letra mayÃºscula
  const hasUppercase = /[A-Z]/.test(password);

  // Verificamos si tiene al menos un nÃºmero
  const hasNumber = /\d/.test(password);

  // Retorna true solo si cumple las dos condiciones
  return hasUppercase && hasNumber;
}

// Pruebas
console.log(validatePassword("Abc12345")); // true â†’ vÃ¡lida
console.log(validatePassword("weak"));     // false â†’ no vÃ¡lida
console.log(validatePassword("Password1")); // true â†’ vÃ¡lida
console.log(validatePassword("clave"));     // false â†’ no vÃ¡lida

// Ejercicio 2: Crear un sistema simple de gestiÃ³n de tareas

function createTaskManager() {
  // Lista de tareas (arreglo vacÃ­o al inicio)
  let tasks = [];

  return {
    // FunciÃ³n para agregar una nueva tarea
    addTask: function(taskDescription) {
      const task = {
        id: tasks.length + 1,
        description: taskDescription,
        completed: false
      };
      tasks.push(task);
      console.log(`âœ… Tarea agregada: "${task.description}"`);
    },

    // FunciÃ³n para marcar una tarea como completada
    completeTask: function(taskId) {
      const task = tasks.find(t => t.id === taskId);
      if (task) {
        task.completed = true;
        console.log(`ğŸ¯ Tarea completada: "${task.description}"`);
      } else {
        console.log("âš ï¸ No se encontrÃ³ la tarea con ese ID.");
      }
    },

    // FunciÃ³n para mostrar la lista de tareas
    listTasks: function() {
      console.log("\nğŸ“‹ Lista de tareas:");
      if (tasks.length === 0) {
        console.log("No hay tareas registradas.");
      } else {
        tasks.forEach(t => {
          const estado = t.completed ? "âœ… Completada" : "ğŸ•“ Pendiente";
          console.log(`${t.id}. ${t.description} - ${estado}`);
        });
      }
    }
  };
}

// Uso:
const myTasks = createTaskManager();

myTasks.addTask("Aprender JavaScript");
myTasks.addTask("Hacer ejercicio");
myTasks.addTask("Leer un libro");

myTasks.listTasks();       // Muestra todas las tareas
myTasks.completeTask(2);   // Marca la tarea con ID 2 como completada
myTasks.listTasks();       // Vuelve a mostrar las tareas con su estado actual
